---
/**
 * Custom Header component with navigation links and search next to logo.
 */
import type { Props } from '@astrojs/starlight/props';

import SiteTitle from '@astrojs/starlight/components/SiteTitle.astro';
import Search from '@astrojs/starlight/components/Search.astro';
import SocialIcons from '@astrojs/starlight/components/SocialIcons.astro';
import ThemeSelect from '@astrojs/starlight/components/ThemeSelect.astro';
import LanguageSelect from '@astrojs/starlight/components/LanguageSelect.astro';
---

<div class="header sl-flex">
  <div class="left-group sl-flex">
    <div class="title-wrapper sl-flex">
      <SiteTitle {...Astro.props} />
    </div>
    <div class="search-wrapper sl-flex print:hidden">
      <Search {...Astro.props} />
    </div>
  </div>
  <div class="sl-hidden md:sl-flex print:hidden right-group">
    <nav class="header-nav">
      <a href="/getting-started/quick-start/">Docs</a>
      <a href="/getting-started/installation/">Install</a>
      <a href="/sponsor/">Sponsor</a>
    </nav>
    <div class="sl-flex social-icons">
      <SocialIcons {...Astro.props} />
    </div>
    <ThemeSelect {...Astro.props} />
    <LanguageSelect {...Astro.props} />
  </div>
</div>

<style>
  .header {
    gap: var(--sl-nav-gap);
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  .left-group {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .title-wrapper {
    overflow: hidden;
  }

  .search-wrapper {
    display: flex;
    align-items: center;
  }

  .right-group {
    gap: 1rem;
    align-items: center;
  }

  .social-icons {
    gap: 1rem;
    align-items: center;
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .header-nav a {
    color: var(--sl-color-gray-1);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .header-nav a:hover {
    color: var(--sl-color-accent-high);
  }

  @media (min-width: 50rem) {
    :global(.menu-button) {
      display: none;
    }
  }
</style>
